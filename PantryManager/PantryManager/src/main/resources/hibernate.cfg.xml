<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.driver-class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=dbPantryManager</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">asdf</property>
        <property name="hibernate.connection.encrypt">true</property>
        <property name="hibernate.connection.trustServerCertificate">true</property>
        <property name="hibernate.default_schema">dbo</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.PantryInc.pantrymanager.model.Autor"/>
        <mapping class="com.PantryInc.pantrymanager.model.Ingrediente"/>
        <mapping class="com.PantryInc.pantrymanager.model.RecetaToIngrediente"/>
        <mapping class="com.PantryInc.pantrymanager.model.Usuario"/>
        <mapping class="com.PantryInc.pantrymanager.model.UsuarioToIngrediente"/>
        <mapping class="com.PantryInc.pantrymanager.model.Receta"/>
        <mapping class="com.PantryInc.pantrymanager.model.UsuarioToReceta"/>
    </session-factory>
</hibernate-configuration>